# Настройки Flake8
[flake8]
max-line-length = 119  # Максимальная длина строки (PEP8 рекомендует <= 79 символов, но многие предпочитают ~119)
select = E,F,W,C90  # Включенные типы проверок (E - синтаксис, F - ошибки, W - предупреждения, C90 - complexity)
extend-ignore = D,E203,E501  # Игнорируемые правила (D - дублирование импорта, E203 - пробел вокруг запятой,
E501 - превышение длины строки)
exclude = tests/*,*.pyc,*__pycache__,migrations/,venv/,build/,dist/,node_modules/,coverage*,docs/build/*  # Папки и
файлы, исключаемые из анализа
show-source = True  # Показывать исходный код строк с ошибками
count = False       # Не показывать количество найденных проблем
statistics = False  # Не выводить статистику по типам нарушений
max-complexity = 10  # Максимальная цикломатическая сложность функций (McCabe Complexity)
per-file-ignores =
    app/models.py:E402  # Специальные исключения для отдельных файлов